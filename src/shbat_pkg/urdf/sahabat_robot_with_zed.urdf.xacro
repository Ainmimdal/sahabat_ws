<?xml version = "1.0"?>
<robot name="sahabat_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- Parameters for ZED Camera Integration -->
<xacro:arg name="camera_name" default="zed2i" />
<xacro:arg name="camera_model" default="zed2i" />
<xacro:arg name="use_zed_localization" default="true" />

<!-- Include ZED camera macro from zed_wrapper package -->
<xacro:include filename="$(find zed_wrapper)/urdf/zed_macro.urdf.xacro" />

<!--BASE LINK-->

<link name = "base_link">

</link>

<!--BASEFOOTPRINT LINK-->

<joint name="basefootprint_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 0" rpy = "0 0 0"/>
</joint>

<link name="base_footprint">

</link>

<!--BODY LINK-->

<joint name = "body_joint" type = "fixed" >
    <parent link = "base_link"/>
    <child link = "body_link"/>
    <origin xyz = "-0.15 0 0" />
</joint>

<link name = "body_link">
    <visual>
        <origin xyz = "0.15 0 0.11" />
        <geometry>
            <box size = "0.3 0.35 0.22"/>
        </geometry>

        <material name = "blue"> 
            <color rgba = "0 0 1 1"/>
        </material>
    </visual>

    <collision>
        <origin xyz = "0.15 0 0.11" />
       <geometry>
            <box size = "0.3 0.35 0.22"/>
        </geometry>
    </collision>

    <inertial>
        <mass value = "5.0"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
</link>


<!--LEFT WHEEL-->

<joint name = "left_wheel_joint" type = "continuous"> 

    <parent link= "base_link"/>
    <child link= "left_wheel_link"/>
    <origin xyz = "0 0.2 0.05" rpy = "-1.571 3.142 0"/> 
    <axis xyz = "0 0 1"/>
    
</joint>

<link name = "left_wheel_link">
    <visual>
        <geometry>
            <cylinder length = "0.057" radius = "0.08"/>
        </geometry>

        <material name = "black">
            <color rgba = "0 0 0 1"/>
        </material>
    </visual>

    <collision>
        <geometry>
            <cylinder length = "0.057" radius = "0.08"/>
        </geometry>
    </collision>

    <inertial>
        <mass value = "3.0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial> 
</link>

<!--RIGHT WHEEL-->

<joint name = "right_wheel_joint" type = "continuous">

    <parent link = "base_link"/>
    <child link = "right_wheel_link"/>
    <origin xyz = "0 -0.2 0.05" rpy = "1.571 0 0 "/> 
    <axis xyz = "0 0 -1"/>

</joint>

<link name = "right_wheel_link">

    <visual>
        <geometry>
            <cylinder length = "0.057" radius = "0.08"/>
        </geometry>

        <material name = "black">
            <color rgba = "0 0 0 1"/>
        </material>
    </visual>

    <collision>
        <geometry>
            <cylinder length = "0.057" radius = "0.08"/>
        </geometry>
    </collision>

    <inertial>
        <mass value = "3.0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial> 
</link>

<!-- FRONT CASTER WHEELL-->

<link name = "front_caster_wheel_link" >
    <visual>
        <geometry>
            <sphere radius= "0.03"/>
        </geometry>

        <material name = "red" >
            <color rgba = "1 0 0 1"/>
        </material>
    </visual>

    <collision>
        <geometry>
            <sphere radius= "0.03"/>
        </geometry>
    </collision>

</link>

<joint name = "front_caster_wheel_joint" type="fixed">
    <parent link = "body_link"/>
    <child link = "front_caster_wheel_link"/>
    <origin xyz = "0.25 0 0" /> 
</joint>


<!-- REAR CASTER WHEEL-->
<link name = "rear_caster_wheel_link" >
    <visual>
        <geometry>
            <sphere radius= "0.03"/>
        </geometry>

        <material name = "purple" >
            <color rgba = "1 0 1 1"/>
        </material>
    </visual>

    <collision>
        <geometry>
            <sphere radius= "0.03"/>
        </geometry>
    </collision>
</link>

<joint name = "rear_caster_wheel_joint" type="fixed">
    <parent link = "body_link"/>
    <child link = "rear_caster_wheel_link"/>
    <origin xyz = "0.05 0 0" /> 
</joint>

<!-- LiDAR componenets-->

<joint name="lidar_joint" type="fixed">
    <parent link="body_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.15 0 0.25" rpy="0 0 0"/>
</joint>

<link name="lidar_link">
    <visual>
        <geometry>
            <cylinder radius="0.05" length="0.06"/>
        </geometry>
        <material name="Black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.05" length="0.06"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
</link>

<!-- Add ZED Camera using macro from zed_wrapper -->
<!-- The macro requires a gnss_origin block parameter (even if empty) -->
<xacro:zed_camera name="$(arg camera_name)" model="$(arg camera_model)">
    <origin xyz="0 0 0" rpy="0 0 0"/>
</xacro:zed_camera>

<!-- Add joint to connect ZED Camera to robot -->
<!-- Following ZED tutorial: when use_zed_localization=true, camera_link is parent of base_link -->
<xacro:if value="$(arg use_zed_localization)">
    <!-- ZED Localization -> The reference link is 'zed2i_camera_link' and 'base_link' is a child -->
    <!-- Physical setup: camera is mounted 5cm forward, 67cm up, tilted 8째 DOWN from base_link
         When camera is parent (publishing odometry):
         - Camera points down 8째 in world frame
         - Base_link is BEHIND and BELOW camera, rotated to stay level with ground
         - So base_link has +8째 pitch relative to camera (camera sees base tilted up)
    -->
    <joint name="$(arg camera_name)_joint" type="fixed">
        <parent link="$(arg camera_name)_camera_link"/>
        <child link="base_link"/>
        <!-- Flat mount: no pitch/roll between camera and base, camera is 0.05m forward and 0.67m above base_link -->
        <origin xyz="-0.05 0.0 0.00" rpy="0 0 0"/>
    </joint>
</xacro:if>

<xacro:unless value="$(arg use_zed_localization)">
    <!-- NO ZED Localization -> 'zed2i_camera_link' is a child of 'base_link' -->
    <!-- Camera is 5cm forward, 67cm up, 8째 pitched down from base_link -->
    <joint name="$(arg camera_name)_joint" type="fixed">
        <parent link="base_link"/>
        <child link="$(arg camera_name)_camera_link"/>
        <!-- Flat mount: no pitch/roll between base and camera -->
        <origin xyz="0.05 0.0 0.00" rpy="0 0 0"/>
    </joint>
</xacro:unless>

</robot>
